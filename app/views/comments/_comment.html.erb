<hr>
<div>
  <p><%= comment.body %></p>
  <p>
  <%= "#{comment.score} points" %>

   <% if user_signed_in? %>
    <% if !current_user.vote_for(comment).present? %>
      | <%= link_to article_comment_votes_path(comment.article, comment, is_up: true), method: :post do %><i class="fi-arrow-up unselected" title="upvote"></i><% end %>
       <%= link_to article_comment_votes_path(comment.article, comment, is_up: false), method: :post do %><i class="fi-arrow-down unselected" title="downvote"></i><% end %>
    <% elsif current_user.vote_for(comment).is_up %>
      | <%= link_to article_comment_vote_path(comment.article, comment, current_user.vote_for(comment)), method: :delete do %><i class="fi-arrow-up" title="remove upvote"></i><% end %>
       <%= link_to article_comment_vote_path(comment.article, comment, current_user.vote_for(comment)), method: :patch do %><i class="fi-arrow-down unselected" title="downvote"></i><% end %>
    <% else %>
      | <%= link_to article_comment_vote_path(comment.article, comment, current_user.vote_for(comment)), method: :patch do %><i class="fi-arrow-up unselected" title="upvote"></i><% end %>
       <%= link_to article_comment_vote_path(comment.article, comment, current_user.vote_for(comment)), method: :delete do %><i class="fi-arrow-down" title="remove downvote"></i><% end %>
    <% end %>
  <% end %>

  </p>

</div>
