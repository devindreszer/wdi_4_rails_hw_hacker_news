<hr>
<div>

  <h4>
  <%= link_to article.url, target: "blank" do %><%= "#{@articles.index(article) + 1}. #{article.title}" %><% end %>
  <% if user_signed_in? %>
    <% if !current_user.vote_for(article).present? %>
      | <%= link_to article_votes_path(article, is_up: true), method: :post do %><i class="fi-arrow-up unselected" title="upvote"></i><% end %>
       <%= link_to article_votes_path(article, is_up: false), method: :post do %><i class="fi-arrow-down unselected" title="downvote"></i><% end %>
    <% elsif current_user.vote_for(article).is_up %>
      | <%= link_to article_vote_path(article, current_user.vote_for(article)), method: :delete do %><i class="fi-arrow-up" title="remove upvote"></i><% end %>
       <%= link_to article_vote_path(article, current_user.vote_for(article)), method: :patch do %><i class="fi-arrow-down unselected" title="downvote"></i><% end %>
    <% else %>
      | <%= link_to article_vote_path(article, current_user.vote_for(article)), method: :patch do %><i class="fi-arrow-up unselected" title="upvote"></i><% end %>
       <%= link_to article_vote_path(article, current_user.vote_for(article)), method: :delete do %><i class="fi-arrow-down" title="remove downvote"></i><% end %>
    <% end %>
  <% end %>


  </h4>

  <p><%= "#{article.score} points" %>
  | <%= "submitted #{((Time.now - article.created_at) / 1.hour).round} hours ago" %>
  | <%= link_to "#{article.comments.count} comments", article_comments_path(article.id) %></p>

</div>
